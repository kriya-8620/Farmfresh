    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
        }

        .containered {
            max-width: 500px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h3 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            border-bottom: 2px solid #007BFF;
            padding-bottom: 10px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .radio-group {
            margin-bottom: 20px;
        }

        button {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="containered">
        <h3>Farmer Self Registration</h3>
        <form method="post" action="/farmers" class="needs-validation" novalidate>
            
            <div class="form-group">
                <label for="farmerName">Name:</label>
                <input id="farmerName" name="farmer[farmer_name]" placeholder="Enter your Name" type="text" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter your Name.
                </div>
            </div>

            <div class="form-group">
                <label for="aadharNo">Aadhar Number:</label>
                <input id="aadharNo" name="farmer[aadhar_no]" placeholder="Enter Aadhar No" type="text" class="form-control" required pattern="[0-9]{12}" maxlength="12">
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a valid 12-digit Aadhar No.
                </div>
            </div>

            <div class="form-group">
                <label for="mobileNo">Mobile Number:</label>
                <input id="mobileNo" name="farmer[mobile_no]" placeholder="Enter Mobile No" type="text" class="form-control" required pattern="[0-9]{10}" maxlength="10">
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a valid 10-digit Mobile No.
                </div>
            </div>

            <div class="form-group">
                <label>Gender:</label><br>
                <div class="radio-group">
                    <input name="farmer[gender]" type="radio" id="M" value="Male" required>
                    <label for="M">Male</label>

                    <input name="farmer[gender]" type="radio" id="F" value="Female">
                    <label for="F">Female</label>

                    <input name="farmer[gender]" type="radio" id="O" value="Others">
                    <label for="O">Others</label>
                </div>
                <div class="invalid-feedback">
                    Please select your Gender.
                </div>
            </div>
 <div class="form-group">
            <label for="district">District:</label>
