<% layout("/layouts/boilerplate") %> 

<body>
    <style>
     body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f4f4;
            padding: 20px;
            
        }
        .containered {
            max-width: 500px;
            margin: 50px auto;
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            backdrop-filter: blur(10px);
        }

        h2 {
            text-align: center;
            color: #333;
            margin-bottom: 30px;
            border-bottom: 2px solid #007BFF;
            padding-bottom: 10px;
        }

        .details {
            font-size: 1.2em;
            color: #555;
            margin-bottom: 20px;
        }

        strong {
            font-weight: bold;
            color: #007BFF;
        }

        button {
            display: block;
            width: 100%;
            padding: 12px;
            margin: 5px;
            background-color: #007BFF;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="containered">
        <h2>Farmer Details</h2>

        <div class="details">
            <p><strong>Name:</strong> <%= farmers.farmer_name %></p>
            <p><strong>Aadhar No:</strong>  <%= farmers.aadhar_no %></p>
            <p><strong>Mobile No:</strong><%= farmers.mobile_no %> </p> 
            <p><strong>Gender:</strong> <%= farmers.gender %></p>
            <p><strong>District:</strong> <%= farmers.district %></p>
            <p><strong>Block:</strong> <%= farmers.block %></p>
            <p><strong>Pincode:</strong> <%= farmers.pincode %></p>
        </div>

        <%if (currUser && currUser._id.equals(farmers.owner))
        { %>
        <form method="get" action="/farmers/<%= farmers._id %>/edit">
            <button>Click here to Edit</button>
        </form>

        <form method="post" action="/farmers/<%= farmers._id %>?_method=DELETE">
            <button>Click here to delete</button>
        </form>
    <%}%>
    </div>
</body>
