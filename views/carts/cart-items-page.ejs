<% layout("/layouts/boilerplate") %>

<body>
    <style>
        /* Your existing CSS styles */
body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .cart-container {
            max-width: 800px;
            width: 100%;
            margin: 20px;
            padding: 30px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease-in-out;
        }

        .cart-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .cart-header h1 {
            margin: 0;
            font-size: 2.5em;
            color: #333;
        }

        .cart-item {
            border-bottom: 1px solid #ccc;
            padding: 20px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item h3 {
            margin: 0;
            font-size: 1.5em;
            color: #333;
        }

        .cart-item p {
            margin: 5px 0;
            color: #666;
        }

        .cart-item-details, .cart-item-total {
            flex: 1;
        }

        .cart-item-total {
            text-align: right;
        }

        .cart-summary {
            padding: 20px 0;
            font-weight: bold;
            text-align: right;
            font-size: 1.2em;
        }

        .checkout-button {
            display: inline-block;
            padding: 15px 30px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 8px;
            font-size: 1.2em;
            text-align: center;
            transition: background-color 0.3s ease;
            margin-top: 20px;
        }

        .checkout-button:hover {
            background-color: #0056b3;
        }

        .empty-cart-message {
            text-align: center;
            font-size: 1.2em;
            color: #666;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        /* Additional styling for quantity buttons */
        .quantity-button {
            cursor: pointer;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        .quantity-button:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="cart-container">
        <div class="cart-header">
            <h1>Your Cart</h1>
        </div>
      
        <div id="cart-items-container">
            <% if (cartItems.length === 0) { %>
                <p class="empty-cart-message">Your cart is empty.</p>
            <% } else { %>
                <% let total = 0; %>
                <% cartItems.forEach(item => { %>
                    <div class="cart-item">
                        <div class="cart-item-details">
                            <h3><%= item.name %></h3>
                            <p>Quantity: 
                            
                                <%= item.quantity %>
                               
                             
                            </p>
                            <p>Price: ₹<%= item.price.toFixed(2) %></p>
                        </div>
                        <div class="cart-item-total">
                            <p>Total: ₹<%= (item.price * item.quantity).toFixed(2) %></p>
                        </div>
                        <% total += item.price * item.quantity; %>
                    </div>
                <% }); %>
                <div class="cart-summary">
                    <h3>Total Price: ₹<%= total.toFixed(2) %></h3>
                </div>
                <div style="text-align: center;">
                    <a href="/checkout" class="checkout-button">Proceed to Checkout</a>
                </div>
            <% } %>
        </div>
    </div>
    <script>
       
        
    
        
    
        
    </script>
    
</body>
