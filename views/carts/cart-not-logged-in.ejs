<% layout("/layouts/boilerplate") %>

<body>
    <style>
        .containerd {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }
        .containerd h1 {
            margin-bottom: 20px;
        }
        .containerd a {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }
        .containerd a:hover {
            background-color: #0056b3;
        }
    </style>

    <div class="containerd">
        <h1>You need to log in to view your cart</h1>
        <a href="/login">Login</a>
    </div>
</body>

