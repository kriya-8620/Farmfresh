
<!-- views/soldCrops.ejs -->
<% layout('/layouts/boilerplate') %>
<body>
    <div class="container">
        <h1>Sold Crops</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Crop</th>
                    <th>District</th>
                    <th>Location</th>
                    <th>Date</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                <% crops.forEach(crop => { %>
                <tr>
                    <td><%= crop.crops %></td>
                    <td><%= crop.district %></td>
                    <td><%= crop.location %></td>
                    <td><%= new Date(crop.date).toLocaleDateString() %></td>
                    <td><%= crop.quantity %></td>
                    <td><%= crop.price %></td>
                    <td><%= crop.total %></td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>
