<% layout("/layouts/boilerplate") %> 


<div class="row mt-3">
  <h1 class="col-6 offset-3">Reset Password</h1>
  <div class="col col-6 offset-3">


    <form method="post" action="/set-password" class="needs-validation" novalidate>
      <div class="mb-3">
          <label class="form-label" for="newPassword">Set New Password</label>
        <input name="newPassword" type="password" class="form-control" id="newPassword" placeholder="Enter new password" required>
        <div class="valid-feedback">Looks strong!</div>

      </div>

    
     <button class="btn btn-primary">Reset Password</button>

    </form>
  </div>
     <p><a href="/login">Back to Login</a></p>
</div>
  
    


    

     

 

 
  


