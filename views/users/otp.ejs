<% layout("/layouts/boilerplate") %> 


<div class="row mt-3">
  <h1 class="col-6 offset-3">Verify OTP</h1>
  <div class="col col-6 offset-3">


    <form method="POST" action="/verify-login-otp" class="needs-validation" novalidate>
      <div class="mb-3">
        <label class="form-label" for="username">Enter OTP</label>
        <input name="otp" type="text" class="form-control" id="username" placeholder="6-digit code" required>
        <div class="valid-feedback">OTP looks good!</div>
      </div>

    
       
      <button class="btn btn-success">Verify & Login</button>
    </form>
  </div>
     <p><a href="/login">Back to Login</a></p>
</div>
  
    


    

     

 

 
  


